{
  "compilerOptions": {                          
    "target": "ES6",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude" : [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}